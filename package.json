{
  "name": "@magnetis/astro-css",
  "version": "1.1.0",
  "author": "Magnetis (https://github.com/magnetis)",
  "homepage": "https://astro.magnetis.com.br/",
  "description": "CSS Implementation of Magnetis design system",
  "bugs": {
    "url": "https://github.com/magnetis/astro-css/issues"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "main": "dist/astro.css",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "design-system",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/magnetis/astro-css"
  },
  "scripts": {
    "build": "postcss src/index.css -o dist/astro.css && svgo assets/icons/*.svg -o dist/assets/icons",
    "lint": "stylelint src/css/**/*.css",
    "ci:build": "yarn lint && yarn build",
    "prepare": "husky install"
  },
  "dependencies": {
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.3",
    "babel-plugin-inline-import": "^3.0.0",
    "commitizen": "^4.2.4",
    "cssnano": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss-cli": "^6.0.0",
    "postcss-css-variables": "^0.14.0",
    "postcss-import": "^12.0.0",
    "postcss-url": "^8.0.0",
    "stylelint": "^12.0.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^2.3.0",
    "text-mask-addons": "^3.8.0",
    "vanilla-text-mask": "^5.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/css/**/*.css": "stylelint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }  
}
